<config version="1.0" xmlns:m="https://github.com/gyselroth/micro">
<production>
    <service m:name="MongoDB\Client">
        <options>
            <db>balloon</db>
            <uri>mongodb://localhost:27017</uri>
        </options>
    </service>

    <service m:name="Balloon\Server">
        <options>
            <config>
                <temp_dir>/tmp/balloon</temp_dir>
                <max_file_version>8</max_file_version>
                <max_file_size>1073741824</max_file_size>
            </config>
        </options>
    </service>

    <service m:name="Balloon\App\ClamAv\Scanner">
         <options>
               <config>
                    <socket>unix:///var/run/clamav/clamd.ctl</socket>
                    <max_stream_size>26214400</max_stream_size>
                    <aggressiveness>3</aggressiveness>
                    <timeout>30</timeout>
                </config>
        </options>
    </service>

    <service enabled="1" m:name="Balloon\App\Notification\Notifier">
        <adapter>
            <adapter enabled="1" m:name="Balloon\App\Notification\Adapter\Mail">
                <options>
                    <config>
                        <sender_address>no-reply@localhost</sender_address>
                        <sender_name>balloon</sender_name>
                    </config>
                </options>
            </adapter>
            <adapter enabled="1" m:name="Balloon\App\Notification\Adapter\Db"/>
        </adapter>
<!--        <options>
            <config>
                <notifications>
                    <new_share enabled="1">
                        <config>
                            <body>{shareowner} added a new share {name} to your cloud.</body>
                            <subject>Balloon: A new share has been added to your cloud</subject>
                        </config>
                    </new_share>
                </notifications>
            </config>
        </options>-->
    </service>

    <service m:name="Balloon\App\Elasticsearch\Elasticsearch">
        <options>
            <config>
                <hosts>
                    <server>http://localhost:9200</server>
                </hosts>
                <index>balloon</index>
            </config>
        </options>
    </service>

    <service m:name="Balloon\App">
        <adapter>
            <Api enabled="1" m:name="Balloon\App\Api\App"/>
            <Webdav enabled="1" m:name="Balloon\App\Webdav\App"/>
            <Sharelink enabled="1" m:name="Balloon\App\Sharelink\App"/>
            <Convert enabled="1" m:name="Balloon\App\Convert\App"/>
            <desktopClient enabled="1" m:name="Balloon\App\DesktopClient\App"/>
            <preview enabled="1" m:name="Balloon\App\Preview\App"/>
            <ClamAv enabled="0" m:name="Balloon\App\ClamAv\App"/>
            <notify enabled="1" m:name="Balloon\App\Notification\App"/>

            <office enabled="1" m:name="Balloon\App\Office\App">
                <options>
                    <config>
                        <loleaflet>https://localhost:9980/loleaflet/dist/loleaflet.html</loleaflet>
                        <token_ttl>3600</token_ttl>
                    </config>
                </options>
            </office>

