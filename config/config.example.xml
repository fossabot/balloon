    <service m:name="Balloon\App\DesktopClient\DesktopClient">
        <options>
            <config>
                <github_request_url>https://api.github.com/repos/gyselroth/balloon-client-desktop/releases/latest</github_request_url>
                <github_request_timeout>10</github_request_timeout>
                <github_request_useragent>balloon server</github_request_useragent>
                <formats/>
                <github_mapping/>
            </config>
        </options>
    </service>

    <service m:name="Zend\Mail\Transport\TransportInterface" use="Zend\Mail\Transport\Sendmail">
    </service>

    <service m:name="Balloon\Filesystem\Storage">
        <adapter>
            <adapter enabled="1" m:name="gridfs" use="Balloon\Filesystem\Storage\Adapter\Gridfs"/>
        </adapter>
    </service>

    <service m:name="Balloon\Hook">
        <adapter>
            <adapter enabled="1" m:name="Balloon\Hook\Delta"/>

            <adapter enabled="1" m:name="Balloon\Hook\AutoCreateUser">
                <options>
                    <config>
                        <attributes>
                            <soft_quota type="int" value="10000000"/>
                            <hard_quota type="int" value="10000000"/>
                        </attributes>
                    </config>
                </options>
            </adapter>

            <adapter enabled="1" m:name="Balloon\Hook\CleanTrash">
                <options>
                    <config>
                        <max_age>2592000</max_age>
                        <interval>3600</interval>
                    </config>
                </options>
            </adapter>

            <adapter enabled="1" m:name="Balloon\Hook\AutoDestroy">
                <options>
                    <config>
                        <interval>3600</interval>
                    </config>
                </options>
            </adapter>
        </adapter>
    </service>

    <service m:name="Balloon\Convert">
        <adapter>
            <adapter enabled="1" m:name="Balloon\Convert\Adapter\Imagick">
                <options>
                    <config>
                        <max_size>300</max_size>
                    </config>
                </options>
            </adapter>

            <adapter enabled="1" m:name="Balloon\Convert\Adapte\Office">
                <options>
                    <config>
                        <max_size>300</max_size>
                        <timeout>10</timeout>
                        <tmp>/tmp/balloon</tmp>
                        <soffice>/usr/bin/soffice</soffice>
                    </config>
                </options>
            </adapter>
        </adapter>
    </service>

    <service m:name="Psr\Log\LoggerInterface" use="Micro\Log">
        <adapter>
            <adapter m:name="file" enabled="1" use="Micro\Log\Adapter\File">
                <options>
                    <config>
                        <file>APPLICATION_PATH/log/out.log</file>
                        <date_format>Y-d-m H:i:s</date_format>
                        <format>{date} [{context.category},{level}]: {message} {context.params} {context.exception}</format>
                        <level>10</level>
                    </config>
                </options>
            </adapter>

            <adapter enabled="0" m:name="stdout" use="Micro\Log\Adapter\Stdout">
                <options>
                    <config>
                        <date_format>Y-d-m H:i:s</date_format>
                        <format>{date} [{context.category},{level}]: {message} {context.params} {context.exception}</format>
                        <level>3</level>
                    </config>
                </options>
            </adapter>

            <adapter enabled="0" m:name="syslog" use="Micro\Log\Adapter\Syslog">
                <options>
                    <config>
                        <date_format>Y-d-m H:i:s</date_format>
                        <format>{date} [{context.category},{level}]: {message} {context.params} {context.exception}</format>
                        <level>3</level>
                        <ident>balloon</ident>
                    </config>
                </options>
            </adapter>
        </adapter>
    </service>

    <service m:name="Micro\Auth">
        <adapter>
            <adapter enabled="1" m:name="basic_db" use="Balloon\Auth\Adapter\Basic\Db"/>

            <adapter enabled="0" m:name="oidc" use="Micro\Auth\Adapter\Oidc">
                <options>
                    <config>
                        <provider_url>https://openidconnect.example.net</provider_url>
                    </config>
                </options>
            </adapter>

            <adapter enabled="0" m:name="preauth" use="Micro\Auth\Adapter\Preauth">
                <options>
                    <config>
                        <key>random_pre_auth_key</key>
                        <source>
                            <lan>192.168.1.0/24</lan>
                            <localhost>127.0.10.1</localhost>
                        </source>
                        <!--<ldap inherits="auth.adapter.basic_ldap.config.ldap"/>
                        <map inherits="auth.adapter.basic_ldap.config.map"/>-->
                        <account_filter>(uid=%s)</account_filter>
                        <attr_sync_cache>3600</attr_sync_cache>
                    </config>
                </options>
            </adapter>

            <adapter enabled="0" m:name="basic_ldap" use="Micro\Auth\Adapter\Basic\Ldap">
                <service>
                    <service m:name="Micro\Ldap">
                        <options>
                            <config>
                                <uri>ldap://localhost:389</uri>
                                <basedn>dc=example,dc=org</basedn>
                                <binddn>cn=admin,dc=example,dc=org</binddn>
                                <bindpw>1234</bindpw>
                                <tls>1</tls>
                                <options>
                                    <option attr="LDAP_OPT_PROTOCOL_VERSION" value="3"/>
                                </options>
                            </config>
                        </options>
                    </service>
                </service>

                <options>
                    <config>
                        <account_filter>(uid=%s)</account_filter>
                        <attr_sync_cache>3600</attr_sync_cache>
                        <map>
                            <namespace type="string" attr="o"/>
                            <avatar type="binary" attr="jpegPhoto"/>
                            <hard_quota type="int" attr="customHardQuotaAttribute"/>
                            <soft_quota type="int" attr="customSoftQuotaAttribute"/>
                            <groups type="array" attr="memberof"/>
                            <mail type="string" attr="mail"/>
                            <ldapdn type="string" attr="dn"/>
                        </map>
                    </config>
                </options>
            </adapter>
        </adapter>
    </service>
</production>
</config>
